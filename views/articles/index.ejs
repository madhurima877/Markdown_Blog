<% layout('layout/boilerplate') -%>
<h1>Articles </h1>

<section>
    <div class="col">
        <%for(const article of articles){%>
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title"><%=article.name%> </h5>
                </div>
                <div class="card-body">
                  <h5 class="card-title">Content</h5>
                  <p class="card-text"><%=article.desc%> </p>
                  <a href="/articles/<%=article._id%>" class="btn btn-primary btn-sm">Show</a>
                </div>
              </div>
        <%}%>
    </div>
</section>


<section>
    <div>
        <a href="/articles/new" class="btn btn-primary btn-sm"><button type="button" class="btn btn-primary btn-lg">Add New Article</button></a>
    </div>
</section>