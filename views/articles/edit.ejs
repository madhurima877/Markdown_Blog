<% layout('layout/boilerplate') -%>
<div class="border p-3 mx-auto w-50">
    <h1>Edit Article</h1>
    <form action="/articles/<%=article._id%>?_method=PATCH" method="post">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" name="name" id="name" value="<%=article.name%>">
        </div>    
  
      
        <div class="mb-3">
            <label for="desc" class="form-label">Description</label>
            <textarea class="form-control" name="desc" id="desc" rows="3"><%=article.desc%></textarea>
        </div> 
        <button type="submit" class="btn btn-success btn-sm">Update</button>
    </form>
</div>